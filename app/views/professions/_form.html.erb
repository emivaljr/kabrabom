<%= bootstrap_form_for(@profession , label_errors: false, inline_errors: false) do |f| %>
      <%= f.alert_message t('errors.template.body') %>
      <%= f.text_field :name %>
      <%= f.text_area :description %>
      <%= f.check_box :active %>
      <%= f.primary nil %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                professions_path , :class => 'btn btn-default' %>
<% end %>
