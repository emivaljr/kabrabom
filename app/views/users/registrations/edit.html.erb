<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-3 page-sidebar">
        <aside>
          <div class="inner-box">
            <div class="user-panel-sidebar">
              <div class="collapse-box">
                <h5 class="collapse-title no-border"> <%=t 'registrations.edit.myclassified'%> <a href="#MyClassified" data-toggle="collapse" class="pull-right"><i class="fa fa-angle-down"></i></a></h5>
                <div class="panel-collapse collapse in" id="MyClassified">
                  <ul class="acc-list">
                    <li><a class="active" href="account-home.html"><i class="icon-home"></i> <%=t 'registrations.edit.personal_home'%> </a></li>

                  </ul>
                </div>
              </div>
              <!-- /.collapse-box  -->
              <div class="collapse-box">
                <h5 class="collapse-title"> <%= t 'registrations.edit.my_adds'%> <a href="#MyAds" data-toggle="collapse" class="pull-right"><i class="fa fa-angle-down"></i></a></h5>
                <div class="panel-collapse collapse in" id="MyAds">
                  <ul class="acc-list">
                    <li><a href="account-myads.html"><i class="icon-docs"></i> My ads <span class="badge">42</span> </a></li>
                    <li><a href="account-favourite-ads.html"><i class="icon-heart"></i> Favourite ads <span class="badge">42</span> </a></li>
                    <li><a href="account-saved-search.html"><i class="icon-star-circled"></i> Saved search <span class="badge">42</span> </a></li>
                    <li><a href="account-archived-ads.html"><i class="icon-folder-close"></i> Archived ads <span class="badge">42</span></a></li>
                    <li><a href="account-pending-approval-ads.html"><i class="icon-hourglass"></i> Pending approval <span class="badge">42</span></a></li>

                  </ul>
                </div>
              </div>
              <!-- /.collapse-box  -->

              <div class="collapse-box">
                <h5 class="collapse-title"> <%=t 'registrations.edit.terminate_account'%> <a href="#TerminateAccount" data-toggle="collapse" class="pull-right"><i class="fa fa-angle-down"></i></a></h5>
                <div class="panel-collapse collapse in" id="TerminateAccount">
                  <ul class="acc-list">
                    <li>
                      <%= link_to registration_path(resource_name), data: { confirm: t('registrations.edit.comfirm_delete_account') }, method: :delete do %>
                          <i class="icon-cancel-circled "></i> <%=t 'registrations.edit.close_account'%>
                      <% end%>
                    </li>
                  </ul>
                </div>
              </div>
              <!-- /.collapse-box  -->
            </div>
          </div>
          <!-- /.inner-box  -->

        </aside>
      </div>
      <!--/.page-sidebar-->

      <div class="col-sm-9 page-content">

        <div class="inner-box">
          <div class="row">
            <div class="col-md-6 col-xs-8 col-xxs-12">
              <h3 class="no-padding text-center-480 useradmin"><a href=""><img class="userImg" src="/images/user.jpg" alt="user"> <%=current_user.first_name%> <%=current_user.last_name%> </a> </h3>
            </div>
            <div class="col-md-6 col-xs-4 col-xxs-12">
              <div class="header-data text-center-xs">

                <!-- Traffic data -->
                <div class="hdata">
                  <div class="mcol-left">
                    <!-- Icon with red background -->
                    <i class="fa fa-eye ln-shadow"></i> </div>
                  <div class="mcol-right">
                    <!-- Number of visitors -->
                    <p><a href="#">7000</a> <em>visits</em></p>
                  </div>
                  <div class="clearfix"></div>
                </div>

                <!-- revenue data -->
                <div class="hdata">
                  <div class="mcol-left">
                    <!-- Icon with green background -->
                    <i class="icon-th-thumb ln-shadow"></i> </div>
                  <div class="mcol-right">
                    <!-- Number of visitors -->
                    <p><a href="#">12</a><em>Ads</em></p>
                  </div>
                  <div class="clearfix"></div>
                </div>

                <!-- revenue data -->
                <div class="hdata">
                  <div class="mcol-left">
                    <!-- Icon with blue background -->
                    <i class="fa fa-user ln-shadow"></i> </div>
                  <div class="mcol-right">
                    <!-- Number of visitors -->
                    <p><a href="#">18</a> <em>Favorites </em></p>
                  </div>
                  <div class="clearfix"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%= bootstrap_flash %>
        <div class="inner-box">
          <div class="welcome-msg">
            <h3 class="page-sub-header2 clearfix no-padding"><%=t 'registrations.edit.hello'%> <%=current_user.first_name%> <%=current_user.last_name%> </h3>
            <span class="page-sub-header-sub small"><%=t 'registrations.edit.lastlogin'%> <%= l current_user.last_sign_in_at ,:format => :long%></span> </div>
          <%= my_error_messages! %>
          <div id="accordion" class="panel-group">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"> <a href="#collapseB1"  data-toggle="collapse"> <%=t 'registrations.edit.mydetails'%> </a> </h4>
              </div>

              <div class="panel-collapse collapse in" id="collapseB1">
                <div class="panel-body">

                  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :horizontal, inline_errors: false) do |f| %>
                      <%= f.text_field :first_name , control_col: "col-sm-9", label_col:"col-sm-3" %>
                      <%= f.text_field :last_name , control_col: "col-sm-9", label_col:"col-sm-3" %>
                      <%= f.text_field :phone_number , control_col: "col-sm-9", label_col:"col-sm-3", data: { inputmask: "'mask': '(99)9999[9]-9999','removeMaskOnSubmit':'true'" } %>
                      <%= f.form_group :gender, label: { text: t('activerecord.attributes.user.gender')}, label_col:"col-sm-3" , control_col: "col-sm-9"  do %>
                          <%= f.radio_button :gender, 'M', label: t('registrations.new.male') %>
                          <%= f.radio_button :gender, 'F', label: t('registrations.new.female') %>
                      <% end %>
                      <%= f.text_field :cpf , control_col: "col-sm-9", label_col:"col-sm-3" , data: { inputmask: "'mask': '999.999.999-99','removeMaskOnSubmit':'true'" } %>
                      <%= f.email_field :email , control_col: "col-sm-9", label_col:"col-sm-3" %>
                      <%= f.password_field :current_password, autocomplete: "off" , control_col: "col-sm-9", label_col:"col-sm-3" , placeholder: t('registrations.edit.confirm_current_password') %>
                      <%= f.password_field :password, autocomplete: "off", control_col: "col-sm-9", label_col:"col-sm-3" , placeholder: t('registrations.edit.confirm_password_change') %>
                      <%= f.password_field :password_confirmation, autocomplete: "off" , control_col: "col-sm-9", label_col:"col-sm-3", placeholder: t('registrations.edit.password_confirmation_change')  %>
                      <div class="content-subheading">
                        <i class="icon-address fa"></i>
                        <strong><%= t 'registrations.new.locale' %></strong>
                      </div>
                      <%= f.fields_for :addresses do |a| %>
                          <%= a.text_field :cep, data: {inputmask: "'mask': '99999-999'"}, label_col: "col-md-4", control_col: "col-md-4", append: link_to("Buscar", "#", class: "btn btn-default", id: "buscarCep", onclick: "return false;") %>
                          <script>
                            $("#buscarCep").click(function () {
                              $.ajax({
                                url: "/cep/search/" + $('#user_addresses_attributes_0_cep').val() + ".json",
                                type: "GET",
                                dataType: 'json',
                                contentType: 'application/json',
                                data: {},
                                success: function (data) {
                                  $('#user_addresses_attributes_0_main').val(data.main);
                                  $('#user_addresses_attributes_0_city').val(data.city);
                                  $('#user_addresses_attributes_0_district').val(data.district);
                                  $("#user_addresses_attributes_0_state option[value=" + data.state + "]").prop("selected", "selected");
                                }
                              });
                            });
                          </script>
                          <%= a.text_field :main, label_col: "col-md-4", control_col: "col-md-6" %>


                          <%= a.text_field :num, label_col: "col-md-4", control_col: "col-md-2" %>
                          <%= a.text_field :complement, label_col: "col-md-4", control_col: "col-md-6" %>

                          <%= a.text_field :district, label_col: "col-md-4", control_col: "col-md-6" %>
                          <%= a.text_field :city, label_col: "col-md-4", control_col: "col-md-6" %>
                          <%= a.collection_select :state, State.all, :sign, :name, {include_blank: 'Selecione', control_col: "col-md-6", label_col: "col-md-4"} %>
                      <% end %>
                      <div class="form-group">
                      <div class="col-sm-offset-3 col-sm-9">
                        <%= f.submit t('registrations.edit.submit') , class: 'btn btn-primary' %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"> <a href="#collapseB3"  data-toggle="collapse"> Preferences </a> </h4>
              </div>
              <div class="panel-collapse collapse" id="collapseB3">
                <div class="panel-body">
                  <div class="form-group">
                    <div class="col-sm-12">
                      <div class="checkbox">
                        <label>
                          <input type="checkbox">
                          I want to receive newsletter. </label>
                      </div>
                      <div class="checkbox">
                        <label>
                          <input type="checkbox">
                          I want to receive advice on buying and selling. </label>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!--/.row-box End-->

        </div>
      </div>
      <!--/.page-content-->
    </div>
    <!--/.row-->
  </div>
  <!--/.container-->
</div>
<!-- /.main-container -->