<div class="main-container">
  <div class="container">
    <div class="row">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

      <div class="col-sm-5 login-box">
        <%= bootstrap_flash %>
        <div class="panel panel-default">

          <div class="panel-intro text-center">
            <h2 class="logo-title">
              <!-- Original Logo will be placed here  -->
              <span class="logo-icon"><i class="icon icon-search-1 ln-shadow-logo shape-0"></i> </span> KABRA<span>BOM </span> </h2>
          </div>

          <div class="panel-body">

                <div class="form-group">
                  <%= f.label :email ,class: 'control-label' %>
                  <div class="input-icon"> <i class="icon-at fa"></i>
                    <%= f.email_field :email, autofocus: true, placeholder:t('.email'), class:'form-control email' %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :password ,class: 'control-label' %>
                  <div class="input-icon"> <i class="icon-lock fa"></i>
                    <%= f.password_field :password, autofocus: true, placeholder:t('.password'), class:'form-control' %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.submit t('.submit') , class: 'btn btn-primary  btn-block' %>
                </div>

          </div>
          <div class="panel-footer">
            <% if devise_mapping.rememberable? -%>
                <div class="checkbox pull-left">
                  <label>
                  <%= f.check_box :remember_me %>
                    <%=  t('.remember_me') %>
                  </label>
                </div>
            <% end -%>

            <p class="text-center pull-right">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to t('.forgot_password'), new_password_path(resource_name) %><br />
              <% end -%>
            </p>
            <div style=" clear:both"></div>
          </div>
        </div>
        <div class="login-box-btm text-center">
          <p><%= t('.notauser') %><br>
            <%= link_to t('.signup'), new_registration_path(resource_name) %>
          </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>