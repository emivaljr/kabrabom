<div class="main-container">
  <div class="container">
    <div class="row">
      <%= bootstrap_flash %>
      <div class="col-md-9 page-content">
        <div class="inner-box category-content">
          <h2 class="title-2 uppercase"><strong> <i class="icon-docs"></i> Post a Free Classified Ad</strong></h2>
          <div class="row">
            <div class="col-sm-12">

              <%= bootstrap_form_for(@service_ad, layout: :horizontal, inline_errors: false, html: {multipart: true}) do |f| %>
                  <fieldset>
                    <%= f.hidden_field :user_id %>
                    <%= f.hidden_field :active %>
                    <script>
                      $(document).ready(function() {
                        $('#service_ad_category').change(function() {
                        $.ajax({
                          url: "<%= remote_select_url %>", // this will be routed
                          type: 'GET',
                          data: {
                          send_id: $("#service_ad_category").val()
                          },
                          async: true,
                          dataType: "json",
                          error: function(XMLHttpRequest, errorTextStatus, error){
                               alert("Failed: "+ errorTextStatus+" ;"+error);
                          },
                          success: function(data){
                            if(data == null){
                              $("#service_ad_service_id").empty().append(new Option('Selecione', ''));
                            }else if(data.length){
                            // here we iterate the json result
                              for(var i in data)
                              {
                              var id = data[i].id;
                              var title = data[i].name;
                              $("#service_ad_service_id").append(new Option(title, id));
                              }
                            }else{
                               var id = data.id;
                              var title = data.name;
                              $("#service_ad_service_id").append(new Option(title, id));
                            }

                          }
                         });
                      });

                     });
                  </script>
                    <!-- Select Basic -->
                    <%= f.collection_select :category, Category.all, :id, :name, {include_blank: 'Selecione', control_col: "col-md-8", label_col: "col-md-3" } %>

                    <%= f.select :service_id, @serviceList.collect {|p| [ p.name, p.id ] }, {include_blank: 'Selecione', control_col: "col-md-8", label_col: "col-md-3" } %>

                    
                    <!-- Text input-->
                    <%= f.text_field :title, control_col: "col-md-8", label_col: "col-md-3", help: 'A great title needs at least 60 characters.' %>
                    <!-- Textarea -->
                    <%= f.text_area :description, control_col: "col-md-8", label_col: "col-md-3" %>

                    <%= f.text_field :price, prepend: "R$", data: { inputmask: "'mask': '[999],99'" }, control_col: "col-md-4", label_col: "col-md-3" %>

                    <!-- photo -->
                    <div class="form-group">
                      <label class="col-md-3 control-label" for="textarea"> Picture </label>
                      <div class="col-md-8">
                        <%= f.fields_for :service_images do |image| %>
                            <div class="mb10">
                              <%= image.file_field_without_bootstrap :photo , class: 'file fileuploadservice', data:{'preview-file-type':'text'} %>
                            </div>
                        <% end %>
                        <p class="help-block">Add up to 5 photos. Use a real image of your product, not catalogs.</p>
                      </div>
                    </div>
                   

                    

                    <!-- Appended checkbox -->
                    

                    <!-- Text input-->
                    
                    <!-- Select Basic -->
                    

                    <!-- Select Basic -->
                   




                    <!-- Button  -->
                    <div class="form-group">
                      <label class="col-md-3 control-label"></label>
                      <div class="col-md-8">
                        <%= f.submit 'Submit', class:"btn btn-success btn-lg" %>
                        </div>
                    </div>
                  </fieldset>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- /.page-content -->

      <div class="col-md-3 reg-sidebar">
        <div class="reg-sidebar-inner text-center">
          <div class="promo-text-box"><i class=" icon-picture fa fa-4x icon-color-1"></i>
            <h3><strong>Post a Free Classified</strong></h3>
            <p> Post your free online classified ads with us. Lorem ipsum dolor sit amet, consectetur adipiscing
              elit. </p>
          </div>

          <div class="panel sidebar-panel">
            <div class="panel-heading uppercase">
              <small><strong>How to sell quickly?</strong></small>
            </div>
            <div class="panel-content">
              <div class="panel-body text-left">
                <ul class="list-check">
                  <li> Use a brief title and description of the item</li>
                  <li> Make sure you post in the correct category</li>
                  <li> Add nice photos to your ad</li>
                  <li> Put a reasonable price</li>
                  <li> Check the item before publish</li>

                </ul>
              </div>
            </div>
          </div>


        </div>
      </div><!--/.reg-sidebar-->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</div>
<script src="/js/fileinput.min.js" type="text/javascript"></script> 
<script>
// initialize with defaults
$(".fileuploadservice").fileinput();
</script>
<!-- /.main-container -->
